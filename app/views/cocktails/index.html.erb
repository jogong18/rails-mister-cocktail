  <div class='row'>
    <% @cocktails.each do |c| %>
    <div class="col-4">
      <p><%=  link_to cocktail_path(c.id) do %></p>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.pexels.com/photos/338713/pexels-photo-338713.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260);">
          <%= c.name %>
        </div>
     <% end %>
    </div>
  <% end %>
  </div>
</div>

