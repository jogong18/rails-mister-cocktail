  <div class='row'>
    <% @cocktails.each do |c| %>
    <div class="col-4">
      <p><%=  link_to cocktail_path(c.id) do %></p>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/collection/2469482/800x600/?sig=<%=rand(99) %>);">
          <%= c.name %>
